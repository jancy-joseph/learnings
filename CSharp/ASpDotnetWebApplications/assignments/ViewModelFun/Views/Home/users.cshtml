@using ViewModelFun.Models;
@using System.Linq;
@model List<User>
@{
    ViewData["Title"] = "A Web Page";
}

<div class="text-center">
    <h1 class="display-4">Here are some users!</h1>
    @{
         <form action="user" method="POST">
            <div class="form-group row">
                <select class="col-sm-8 form-control" name="user1">
                    @foreach(var i in @Model)
                    {
                        <option valuze="@i">@i.firstName @i.lastname</option>
                    }
                </select>   
            </div>
            <div class="form-group row">
                <div class="col-sm-3">
                    <input type="submit" value="Register" class="col-sm-4 btn btn-primary">
                 </div>
            </div>
         </form>
}
</div>