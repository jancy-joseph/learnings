@using ValidateForm.Models
@model User
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
     <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body>
    <main>
        <div class="jumbotron">
            <div class="container">
                <div class="row">
                    <div class="col-sm-5">
                        <h2>Register</h2>
                         <form asp-controller="Home" asp-action="registerUser"  asp-method="post">
                            <div class="form-group row">
                                <span class="col-sm-12" asp-validation-for="FirstName"></span>
                                <label class="col-sm-4" asp-for="FirstName"></label>
                                <input type ="text" class="col-sm-8 form-control" asp-for="FirstName">
                            </div>
                            <div class="form-group row">
                                <span class="col-sm-12" asp-validation-for="LastName"></span>
                                <label class="col-sm-4" asp-for="LastName"></label>
                                <input type ="text" class="col-sm-8 form-control" asp-for="LastName">
                            </div>
                            <div class="form-group row">
                                <span class="col-sm-12" asp-validation-for="Email"></span>
                                <label class="col-sm-4" asp-for="Email"></label>
                                <input type ="text" class="col-sm-8 form-control" asp-for="Email">
                            </div>
                            <div class="form-group row">
                                <span class="col-sm-12" asp-validation-for="Age"></span>
                                <label class="col-sm-4" asp-for="Age"></label>
                                <input type ="number" class="col-sm-8 form-control" asp-for="Age">
                            </div>
                            <div class="form-group row">
                                <span class="col-sm-12" asp-validation-for="mydate"></span>
                                <label class="col-sm-4" asp-for="mydate"></label>
                                <input type ="date" class="col-sm-8 form-control" asp-for="mydate">
                            </div>
                            <div class="form-group row">
                                <span class="col-sm-12" asp-validation-for="Password"></span>
                                <label class="col-sm-4" asp-for="Password"></label>
                                <input type ="password" class="col-sm-8 form-control" asp-for="Password">
                            </div>
                            <div class="form-group row">
                                <span class="col-sm-12" asp-validation-for="ConfirmPW"></span>
                                <label class="col-sm-4" asp-for="ConfirmPW"></label>
                                <input type ="password" class="col-sm-8 form-control" asp-for="ConfirmPW">
                            </div>
                            <div class="form-group row">
                                <input class ="col-sm-4" type="submit" value="Register">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>   
</body>
</html>